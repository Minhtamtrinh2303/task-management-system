<div class="max-w-3xl mx-auto px-4">
  <div class="flex items-center justify-between">
    <h1 class="flex-1 font-bold text-3xl">Account</h1>

    <div class="flex-wrap lg:flex items-center lg:space-x-3">
      <%= link_to accounts_path, class: button_class(theme: "transparent") do %>
      All Accounts
      <% end %>
      <%= link_to edit_account_path(@account), class: button_class(theme:"primary") do %>
      Edit
      <% end %>
    </div>
  </div>

  <ul class="text-slate-700">
      <li>
        <p class="font-semibold">Username:</p>
        <p><%= @account.username %></p>
      </li>
      <li>
        <p class="font-semibold">Email:</p>
        <p><%= @account.email %></p>
      </li>
      <li>
        <p class="font-semibold">Password:</p>
        <p><%= @account.password %></p>
      </li>
  </ul>
</div>
