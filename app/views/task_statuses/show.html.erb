<div class="max-w-3xl mx-auto px-4">
  <div class="flex items-center justify-between">
    <h1 class="flex-1 font-bold text-3xl">Task_status</h1>

    <div class="flex-wrap lg:flex items-center lg:space-x-3">
      <%= link_to task_statuses_path, class: button_class(theme: "transparent") do %>
      All Task_statuses
      <% end %>
      <%= link_to edit_task_status_path(@task_status), class: button_class(theme:"primary") do %>
      Edit
      <% end %>
    </div>
  </div>

  <ul class="text-slate-700">
      <li>
        <p class="font-semibold">Status name:</p>
        <p><%= @task_status.status_name %></p>
      </li>
  </ul>
</div>
