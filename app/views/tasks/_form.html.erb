<%= form_with(model: task) do |form| %>
<% if task.errors.any? %>
<div id="error_explanation" class="bg-red-50 p-6 rounded text-red-800">
  <h2 class="text-lg font-semibold mb-3"><%= pluralize(task.errors.count, "error") %> prohibited this task from being saved:</h2>

  <ul class="list-disc leading-relaxed">
    <% task.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>

  <div class="mb-6">
        <%= form.label :title, class: label_class %>
          <%= form.text_field :title, class: input_class %>
      </div>
  <div class="mb-6">
        <%= form.label :description, class: label_class %>
          <%= form.text_area :description, class: input_class %>
      </div>
  <div class="mb-6">
        <%= form.label :due_date, class: label_class %>
          <%= form.date_field :due_date, class: input_class %>
      </div>
  <div class="mb-6">
        <%= form.label :priority, class: label_class %>
          <%= form.check_box :priority, class: input_class %>
      </div>
  <div class="mb-6">
        <%= form.label :status, class: label_class %>
          <%= form.text_field :status, class: input_class %>
      </div>
  <div class="mb-6">
        <%= form.label :completed_date, class: label_class %>
          <%= form.date_field :completed_date, class: input_class %>
      </div>
  <div class="mb-6">
        <%= form.label :reminder_time, class: label_class %>
          <%= form.datetime_field :reminder_time, class: input_class %>
      </div>
  <div class="mb-6">
        <%= form.label :project_id, class: label_class %>
          <%= form.select :project_id, options_from_collection_for_select( Project.all, 'id', 'name', selected = task.project_id), class: label_class %>
      </div>
  <div class="mb-6">
        <%= form.label :task_status_id, class: label_class %>
          <%= form.select :task_status_id, options_from_collection_for_select( TaskStatus.all, 'id', 'name', selected = task.task_status_id), class: label_class %>
      </div>

<%= form.submit class: button_class(theme: 'primary') %>

<% if task.persisted? %>
<%= link_to "Cancel", task, class: "text-neutral-700 underline inline-block ml-3" %>
<% else %>
<%= link_to "Cancel", tasks_path, class:  "text-neutral-700 underline inline-block ml-3" %>
<% end %>
<% end %>
