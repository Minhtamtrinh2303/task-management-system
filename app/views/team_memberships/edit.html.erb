  <div class="flex items-center justify-between mb-6 flex-wrap">
    <h1 class="font-bold text-3xl mb-6">Edit team_membership</h1>
    <% if @team_membership.persisted? %>
    <%= button_to 'Destroy', @team_membership, method: :delete, class: "text-red-700 underline", data: { turbo_confirm: 'Are you sure?' } %>
